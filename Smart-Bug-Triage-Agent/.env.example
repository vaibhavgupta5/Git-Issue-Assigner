# SQLite Database (easier for development)
DATABASE_URL=sqlite:///smart_bug_triage.db

# PostgreSQL Database (for production)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=smart_bug_triage
# DB_USERNAME=your_username
# DB_PASSWORD=your_password_here

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest

# GitHub Token - REQUIRED
# Get your token from: https://github.com/settings/tokens
# Required scopes: repo, read:org, read:user
GITHUB_TOKEN=

# Google Gemini API Key - REQUIRED for AI categorization and roadmap generation
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini AI Configuration - OPTIONAL but RECOMMENDED
# Get your API key from: https://aistudio.google.com/app/apikey
# Used for intelligent issue categorization
GEMINI_API_KEY=

# Logging
LOG_LEVEL=INFO

# Developer Agent Configuration
DEVELOPER_AGENT_UPDATE_INTERVAL=900
DEVELOPER_AGENT_MAX_RETRIES=3
DEVELOPER_AGENT_RETRY_DELAY=60
DEVELOPER_AGENT_HEALTH_CHECK_INTERVAL=300

# Performance Tracking Configuration
PERFORMANCE_TRACKING_ENABLED=true
PERFORMANCE_LOOKBACK_DAYS=90
SKILL_CONFIDENCE_LOOKBACK_DAYS=180

# Calendar Integration Configuration (optional)
CALENDAR_INTEGRATION_ENABLED=false
CALENDAR_PROVIDER=google

# Developer Discovery Configuration
DEVELOPER_DISCOVERY_ENABLED=true
DEVELOPER_DISCOVERY_INTERVAL=86400
DEVELOPER_MIN_CONTRIBUTIONS=1
DEVELOPER_LOOKBACK_MONTHS=6

# GitHub Repository Configuration
# Replace with your organization/username and repositories
GITHUB_ORGANIZATION=satvik-svg
GITHUB_REPOSITORIES=Smart-Bug-Triage-Agent
# Or use pattern matching: GITHUB_REPO_PATTERN=your_username/*

# Triage Agent Configuration
TRIAGE_CONFIDENCE_THRESHOLD=0.7
TRIAGE_MANUAL_REVIEW_QUEUE=manual_review
TRIAGE_PROCESSING_TIMEOUT=30.0
